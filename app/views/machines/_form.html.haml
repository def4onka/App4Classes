= form_for @machine do |f|
  - if @machine.errors.any?
    #error_explanation
      %h2= "#{pluralize(@machine.errors.count, "error")} prohibited this machine from being saved:"
      %ul
        - @machine.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :room_id
    = f.number_field :room_id
  .field
    = f.label :left
    = f.text_field :left
  .field
    = f.label :top
    = f.text_field :top
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
