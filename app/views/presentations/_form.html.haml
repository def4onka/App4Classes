= form_for @presentation do |f|
  - if @presentation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@presentation.errors.count, "error")} prohibited this presentation from being saved:"
      %ul
        - @presentation.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :document
    = f.text_field :document
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :comment
    = f.text_field :comment
  .field
    = f.label :groups
    = f.text_field :groups
  .field
    = f.label :last_open_slide
    = f.number_field :last_open_slide
  .field
    = f.label :auto_open
    = f.check_box :auto_open
  .actions
    = f.submit 'Save'
